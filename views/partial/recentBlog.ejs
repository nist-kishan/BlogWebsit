<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>blog</title>
    <link rel="stylesheet" href="/css/recentBlog.css">
</head>
<body>
    <% latestRecords.forEach(record => { %>
        <article>
            <div class="blogContent">
                <div class="writerImage">
                    <img src="<%= record.imagePath  %>" alt="profile picture">
                    <div class="aboutWriter">
                        <p id="name"><%= record.Name  %></p>
                        <p><%= record.qualification  %></p>
                        <p id="_id"><%= record._id  %></p>
                    </div>
                </div>
                <div class="description">
                    <div class="block1">
                        <p id="headLine">Heading:<%= record.heading  %></p>
                        <p>Category : <%= record.category  %></p>
                    </div>
                    <div class="block2">
                        <p for="content"><%= record.description  %></p>
                    </div>
                    <div class="block3">
                        <p for="date" id="date">Publish Date:<%= record.created_at.toDateString()  %></p>
                        <p id="readmore"><a href="/readBlog?_id=<%= record._id  %>">Read more</a></p>
                    </div>
                </div>
            </div>
        </article>
        <% }) %>
</body>
</html>